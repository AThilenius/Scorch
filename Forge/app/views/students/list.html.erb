<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Students

      <div class="btn-group btn-group-xs pull-right">
        <a type="button" class="btn btn-default" href=<%=students_new_path%>>Add</a>
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
          Filter
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">All</a></li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Free</a></li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Allocated</a></li>
        </ul>
      </div>

    </h3>

  </div>
  <div class="panel-body">

    <ul class="list-group">
      <% @students.each do |user| %>

          <a class="list-group-item" href=<%= student_path(user.id) %>>
            <%= "#{user.firstName} #{user.lastName}" %>
          </a>

      <% end %>
    </ul>

  </div>
</div>