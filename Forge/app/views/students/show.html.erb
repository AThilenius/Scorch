<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Student: <%= @student.username %>
    </h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <img height="250" width="250" src=<%=asset_path('Flame-512.png')%> />
      </div>
      <div class="col-md-4">

        <dl class="dl-horizontal">
          <dt>CU Login:</dt>
          <dd><%= @student.username %></dd>
        </dl>

        <dl class="dl-horizontal">
          <dt>First Name:</dt>
          <dd><%= @student.firstName %></dd>
        </dl>

        <dl class="dl-horizontal">
          <dt>Last Name:</dt>
          <dd><%= @student.lastName %></dd>
        </dl>

        <dl class="dl-horizontal">
          <dt>Password:</dt>
          <dd><%= @student.password %></dd>
        </dl>

        <dl class="dl-horizontal">
          <dt>Student ID:</dt>
          <dd><%= @student.studentID %></dd>
        </dl>

      </div>
      <div class="col-md-4">
        <%= link_to "Delete Account", student_path(@student.id), :class => 'btn btn-danger autoWidth', :method => :delete %>
      </div>
    </div>

  </div>
</div>