<div style='position:relative;'>

  <button class="btn btn-default" style="min-width: 150px; position:absolute;left:0;top:0" data-async-href="<%=anvil_assignment_list_path%>">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    All Assignments
  </button>


  <div style="text-align: center">
    <h1 class="text-center"><%= @assignment.name %></h1>
  </div>

  <div style="position: absolute;right:0;top:0;">
    <div class="btn-group">
      <button style="min-width: 150px;" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        Download <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><a class="data-no-turbolink" href=<%= "/downloads/#{@assignment.id}/vs" %>>Visual Studio 2012</a></li>
        <li><a class="data-no-turbolink" href=<%= "/downloads/#{@assignment.id}/xcode" %>>XCode</a></li>
        <li><a class="data-no-turbolink" href=<%= "/downloads/#{@assignment.id}/makefile" %>>Unix Makefile</a></li>
      </ul>
    </div>
  </div>
</div>


<h4 class="text-center">
  <span class="label label-<%= @assignment.due_date_color %>">
    <%= @assignment.is_past_due ? 'Closed' : @assignment.due_date_countdown %>
  </span>
</h4>

<div style="text-align: center;">
  <br>

  <h3>My Progress</h3>
  <div data-async-url="<%="anvil/#{@assignment.id}/assignment_progress"%>">
    <img style="max-width: 100px; margin-top: 100px; margin-bottom: 100px;" alt="Loading" src=<%= asset_path('Loading.gif') %> />
  </div>
</div>
<br>
<br>

<div data-async-url="<%="anvil/#{@assignment.id}/assignment_description"%>">
  <div style="text-align: center;">
    <img style="max-width: 100px; margin-top: 100px; margin-bottom: 100px;" alt="Loading" src=<%= asset_path('Loading.gif') %> />
  </div>
</div>