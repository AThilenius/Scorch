<h1 class="text-center"><%= @assignment.key %></h1>
<hr>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Overview
    </h3>
  </div>
  <div class="panel-body">
    <p>
      Assignment Token:
      <span class="label label-default"><%= sessionGetUser.getUserAssignment(@assignment.key).authToken %></span>
    </p>
    <p>
      Project Files:
      <span><a href="#">Visual Studio 2012</a>, <a href="#">XCode</a></span>
    </p>
    <p>
      Due Date:
      <span>STUB</span>
    </p>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Description
    </h3>
  </div>
  <div class="panel-body">
    <!--Render Assignment-->
    <%= markdown(@assignment.descriptionMarkdown) %>
  </div>
</div>

<!--Render Each Level-->
<% @assignment.allLevels.each do |level| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= level.key %>
        </h3>
      </div>
      <div class="panel-body">
        <%= markdown(level.descriptionMarkdown) %>
      </div>
    </div>
<% end %>

<!--New Level (Admin only)-->
<% if sessionIsAdmin %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Create New Level
        </h3>
      </div>
      <div class="panel-body">
        <form id="createForm" role="form-createLevel" action="createLevel">

          <div class="form-group">
            <input class="form-control" type="name" name="name" placeholder="Level Name">
          </div>

          <div class="form-group">
            <input class="form-control" type="possiblePoints" name="possiblePoints" placeholder="Possible Points">
          </div>

          <div class="form-group">
            <textarea class="form-control" type="descriptionMarkdown" name="descriptionMarkdown" placeholder="Markdown"></textarea>
          </div>

          <input type="hidden", value="<%= @assignment.key %>", name="assignment">

          <button type="submit" class="btn btn-default btn-primary">Create</button>
        </form>
      </div>
    </div>
<% end %>