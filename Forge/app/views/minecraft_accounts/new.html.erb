<form id="createForm" role="form-signin" action="create">
	<div class="thinWindow">
		<h3 class="text-center"> Minecraft Account Info </h3>
		<hr></hr>
		<div class="form-group">
			<label for="mcusername">Account User Name</label>
			<input id="unField" class="form-control" type="mcusername" name="mcusername" placeholder="Account User Name">
		</div>
		<div class="form-group">
			<label for="mcpassword">Account Password</label>
			<input id="pwField" class="form-control" type="password" name="mcpassword" placeholder="Account Password">
		</div>
		<button type="submit" class="btn btn-default btn-primary autoWidth">Create</button>
		<hr></hr>
	</div>
</form>
<div class="thinWindow">

	<div id="verifyDiv" class="hidden">
		<h4> Verifying Account Info </h4>

		<div class="progress">
		  <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
		    <span class="sr-only"></span>
		  </div>
		</div>
	</div>

	<p class="small text-center">Forge, your portal to Scorch</p>
</div>