<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Statistics</h3>

  </div>
  <div class="panel-body">
    <div class="progress">
      <div class="progress-bar progress-bar-danger" style="width: 70%">
        <span class="">Allocated</span>
      </div>
      <div class="progress-bar progress-bar-success" style="width: 30%">
        <span class="">Free</span>
      </div>
    </div>

  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Accounts

      <div class="btn-group btn-group-xs pull-right">
        <a type="button" class="btn btn-default" href=<%=minecraft_accounts_new_path%>>Add</a>
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
          Filter
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">All</a></li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Free</a></li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Allocated</a></li>
        </ul>
      </div>

    </h3>

  </div>
  <div class="panel-body">

    <ul class="list-group">
      <% MinecraftAccount.find_each do |mcAccount| %>

          <a class="list-group-item" href=<%= minecraft_account_path(mcAccount.id) %>>
            <%= mcAccount.username.upcase %> - <%= mcAccount.username %>
          </a>

      <% end %>
    </ul>

  </div>
</div>