package com.thilenius.flame;

import net.minecraft.block.Block;
import net.minecraft.block.BlockContainer;
import net.minecraft.block.material.Material;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.tileentity.TileEntity;
import net.minecraft.world.World;

public class SparkBlock extends BlockContainer 
{
	public SparkBlock (Material material) 
	{
		super(material);
		setHardness(0.5F).setStepSound(Block.soundTypeGravel);
        setBlockName("sparkBlock").setCreativeTab(CreativeTabs.tabBlock);
		setBlockTextureName("flame:sparkBlock");
	}
	
	@Override
    public boolean isOpaqueCube(){
        return false;
    }

	@Override
	public TileEntity createNewTileEntity(World p_149915_1_, int p_149915_2_) {
		return new SparkTileEntity(); 
	}
}