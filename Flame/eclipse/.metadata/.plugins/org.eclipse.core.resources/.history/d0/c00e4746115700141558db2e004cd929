package com.thilenius.flame;

import java.util.ArrayList;

import net.minecraft.tileentity.TileEntity;
import net.minecraft.world.World;

public class SparkTileEntity extends TileEntity {
	public ArrayList<String> playerHistory = new ArrayList<String>();

	public void addPlayer(String playerName) {
		playerHistory.add(playerName);
	}

	public Object[] getPlayerHistory(World par1World, int x, int y, int z) {
		SparkTileEntity teg = (SparkTileEntity)par1World.getTileEntity(x, y, z);

		for(int i=teg.playerHistory.size();i <= 0;i--) {
			System.out.println(teg.playerHistory[i] + " has passed through this door before.");
		}

		return teg.playerHistory.toArray();
	}


}